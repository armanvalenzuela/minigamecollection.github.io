<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memory_bg"
    tools:context=".PopInstructions">

    <TextView
        android:id="@+id/instructionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:\n\n1. Watch the sequence of tiles that light up.\n2. Memorize the sequence and tap the tiles in the correct order.\n3. The game gets harder with each round as the sequence grows longer.\n4. If you tap the wrong tile, the game is over.\n\nGood luck and have fun!"
        android:textSize="18sp"
        android:padding="16dp"
        android:fontFamily="@font/cheese"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/returnButton" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:background="@drawable/red_button"
        android:fontFamily="@font/cheese"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
