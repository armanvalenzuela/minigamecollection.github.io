<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snake_bg"
    tools:context=".SnakeMainActivity">

    <!-- Score Display (left aligned) -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:fontFamily="@font/cheese"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <!-- High Score Display (right aligned) -->
    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: 0"
        android:textSize="24sp"
        android:fontFamily="@font/cheese"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp" />

    <!-- Game Board Layout -->
    <RelativeLayout
        android:id="@+id/gameBoard"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/scoreText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Controls Layout -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/gameBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Main Menu and Restart Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Main Menu Button -->
            <Button
                android:id="@+id/mainMenuButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Main Menu"
                android:textSize="22sp"
                android:fontFamily="@font/cheese"
                android:textStyle="bold"
                android:background="@drawable/blue_button"/>

            <!-- Space between Main Menu and Restart -->
            <View
                android:layout_width="20dp"
                android:layout_height="50dp" />

            <!-- Restart Button -->
            <Button
                android:id="@+id/restartButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Restart"
                android:fontFamily="@font/cheese"
                android:textSize="21sp"
                android:textStyle="bold"
                android:background="@drawable/red_button"/>
        </LinearLayout>

        <!-- Space between Restart and Up Button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- Up Button (centered) -->
        <Button
            android:id="@+id/upButton"
            android:layout_width="197dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/cheese"
            android:text="Up" />

        <!-- Movement Buttons (Left and Right) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/leftButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cheese"
                android:text="Left" />
            <!-- Space between Restart and Up Button -->

            <Button
                android:id="@+id/rightButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cheese"
                android:text="Right" />
        </LinearLayout>

        <!-- Down Button (centered) -->
        <Button
            android:id="@+id/downButton"
            android:layout_width="201dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/cheese"
            android:text="Down" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
