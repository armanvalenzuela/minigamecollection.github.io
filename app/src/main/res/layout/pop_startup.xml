<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memory_bg"
    tools:context=".PopStartup">

    <!-- Game Title -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pop It"
        android:fontFamily="@font/cheese"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/memory_colorbutton"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Start Game Button -->

    <!-- Instructions Button -->

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Start Game"
        android:fontFamily="@font/cheese"
        android:background="@drawable/memory_colorbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

    <Button
        android:id="@+id/instructionsButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:fontFamily="@font/cheese"
        app:layout_constraintTop_toBottomOf="@+id/startGameButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Reset High Score Button -->
    <Button
        android:id="@+id/resetHighScoreButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reset High Score"
        android:fontFamily="@font/cheese"
        app:layout_constraintTop_toBottomOf="@+id/instructionsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
