<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/row_bg">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="4 IN A ROW"
        android:background="@drawable/row_colorbutton"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/cheese"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="51dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="The objective is to be the first to form a horizontal, vertical, or diagonal line of four of your colored discs on a grid. Connect 4 of the same colored discs in a row to win."
        android:textColor="#E0E0E0"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionTextView"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/cheese"
        android:text="Adjust the difficulty"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/difficultyTextView"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/easyRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:buttonTint="#64DD17"
            android:fontFamily="@font/cheese"
            android:background="@drawable/green_button"
            android:maxWidth="200dp"
            android:text="EASY"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/normalRadioButton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="NORMAL"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFAB00"
            android:background="@drawable/yellow_button"
            android:fontFamily="@font/cheese"
            android:maxWidth="200dp" />

        <RadioButton
            android:id="@+id/hardRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="HARD"
            android:textColor="#FFFFFF"
            android:buttonTint="#D50000"
            android:background="@drawable/red_button"
            android:fontFamily="@font/cheese"
            android:maxWidth="200dp" />
    </RadioGroup>

    <Button
        android:id="@+id/playBotButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/difficultyGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:backgroundTint="#FF8F00"
        android:elevation="8dp"
        android:fontFamily="@font/cheese"
        android:text="PLAY VS.\nBOT"
        android:background="@drawable/orange_button"
        android:textStyle="bold"
        android:textSize="21sp"
        android:gravity="center" />

    <Button
        android:id="@+id/playFriendButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/playBotButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3F51B5"
        android:elevation="5dp"
        android:fontFamily="@font/cheese"
        android:text="PLAY VS. FRIEND"
        android:background="@drawable/violet_button"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="21sp"/>
</RelativeLayout>
