<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/row_bg">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="4 IN A ROW"
        android:background="@drawable/row_colorbutton"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/cheese" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/row_bg"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="The objective is to be the first to form a horizontal, vertical, or diagonal line of four of your colored discs on a grid. Connect four of the same colored discs in a row to win"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/cheese"
        android:text="Adjust the difficulty"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/difficultyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/easyRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:buttonTint="#64DD17"
            android:background="@drawable/green_button"
            android:fontFamily="@font/cheese"
            android:text="EASY"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/normalRadioButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:buttonTint="#FFAB00"
            android:background="@drawable/yellow_button"
            android:fontFamily="@font/cheese"
            android:text="NORMAL"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/hardRadioButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:buttonTint="#D50000"
            android:background="@drawable/red_button"
            android:fontFamily="@font/cheese"
            android:text="HARD"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RadioGroup>

    <Button
        android:id="@+id/playBotButton"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_below="@id/difficultyGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_button"
        android:elevation="8dp"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="PLAY VS.\nBOT"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/playFriendButton"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_below="@id/playBotButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:background="@drawable/violet_button"
        android:fontFamily="@font/cheese"
        android:text="PLAY VS. FRIEND"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />
</RelativeLayout>
