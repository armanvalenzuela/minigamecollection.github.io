<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/row_bg">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/row_bg"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="The objective is to be the first to form a horizontal, vertical, or diagonal line of four of your colored discs on a grid. Connect four of the same colored discs in a row to win!"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/row_colorbutton"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="4 IN A ROW"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="280dp"
        android:layout_height="34dp"
        android:layout_below="@id/difficultyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyTextView">

        <RadioButton
            android:id="@+id/easyRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:buttonTint="#64DD17"
            android:fontFamily="@font/cheese"
            android:text="EASY"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/normalRadioButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_button"
            android:buttonTint="#FFAB00"
            android:fontFamily="@font/cheese"
            android:text="NORMAL"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/hardRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:buttonTint="#D50000"
            android:fontFamily="@font/cheese"
            android:text="HARD"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RadioGroup>

    <Button
        android:id="@+id/playBotButton"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_below="@id/difficultyGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/orange_button"
        android:elevation="8dp"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="PLAY VS.\nBOT"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyGroup" />

    <Button
        android:id="@+id/playFriendButton"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_below="@id/playBotButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/violet_button"
        android:elevation="8dp"
        android:fontFamily="@font/cheese"
        android:text="PLAY VS. FRIEND"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playBotButton"
        app:layout_constraintVertical_bias="0.192" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cheese"
        android:text="Adjust the difficulty"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionTextView" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_gravity="start"
        android:layout_marginTop="52dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back to Main"
        android:padding="16dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
