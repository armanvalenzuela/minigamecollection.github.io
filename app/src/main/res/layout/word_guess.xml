<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wordguess_bg"
    android:gravity="center">

    <TextView
        android:id="@+id/appName"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/wordguess_bg"
        android:fontFamily="@font/cheese"
        android:text="WORD GUESS"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/lightgreen_button"
        android:fontFamily="@font/cheese"
        android:text="PLAY"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyGroup" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="Adjust the difficulty"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortDescription" />

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="283dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/easyButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:buttonTint="@color/black"
            android:fontFamily="@font/cheese"
            android:text="EASY"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/normalButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_button"
            android:buttonTint="@color/black"
            android:fontFamily="@font/cheese"
            android:text="NORMAL"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/hardButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:buttonTint="@color/black"
            android:fontFamily="@font/cheese"
            android:text="HARD"
            android:textSize="16sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/shortDescription"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/wordguess_des"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="Guess the five-letter word in five tries by entering words and receiving feedback on the letters that match the target word in the correct position or are included but in the wrong position!"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:layout_marginTop="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back to Main"
        android:padding="16dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
