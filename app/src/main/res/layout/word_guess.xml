<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wordguess_bg"
    android:gravity="center">

    <TextView
        android:id="@+id/appName"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/wordguess_bg"
        android:text="WORD GUESS"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/cheese"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/cheese"
        android:background="@drawable/wordguess_colorbutton"
        android:gravity="center"
        android:text="Guess the five-letter word in five tries by entering words and receiving feedback on the letters that match the target word in the correct position (green) or are included but in the wrong position! (yellow)."
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cheese"
        android:gravity="center"
        android:text="Adjust the difficulty"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/difficultyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/easyButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:buttonTint="@color/black"
            android:background="@drawable/green_button"
            android:fontFamily="@font/cheese"
            android:text="EASY" />

        <RadioButton
            android:id="@+id/normalButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:buttonTint="@color/black"
            android:background="@drawable/yellow_button"
            android:fontFamily="@font/cheese"
            android:textSize="16sp"
            android:text="NORMAL" />

        <RadioButton
            android:id="@+id/hardButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cheese"
            android:buttonTint="@color/black"
            android:background="@drawable/red_button"
            android:textSize="16sp"
            android:text="HARD" />
    </RadioGroup>

    <Button
        android:id="@+id/playButton"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/cheese"
        android:text="PLAY"
        android:textSize="25sp" />
</LinearLayout>
